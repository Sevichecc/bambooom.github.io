---
import presentation from "@/data/presentation";
---

<footer class="z-40 flex w-full gap-2 md:flex-row md:justify-between items-center">
  <div class="credits text-xs text-stone-500">All those moments will be lost in time, like tears in rain...</div>
  <div class="text-center whitespace-nowrap flex flex-row gap-2">
    {
      presentation.socials.map((social, index) => (
        <a class="inline-block w-8 h-8 leading-8 hover:text-neutral-100 hover:-translate-y-1 transition-all duration-300 ease-[cubic-bezier(0.175, 0.885, 0.32, 1.275)]" href={social.link} title={social.label} target="_blank">
          <i class={`bi bi-${social.icon} text-base`}></i>
        </a>
      ))
    }
  </div>
</footer>
